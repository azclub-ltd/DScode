<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="24dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Link Remote Version control provider"
			android:layout_gravity="center_horizontal"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:background="#FF000000"
				android:layout_weight="1.0">

				<ImageView
					android:tint="@color/white"
					android:src="@drawable/ic_github"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="GitHub"
					android:textColor="@color/white"
					android:layout_marginLeft="4dp"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:layout_marginStart="4dp"
				android:background="@color/colorPrimary"
				android:padding="4dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Link"
					android:textColor="@color/white"
					android:layout_marginStart="6dp"
					android:layout_marginEnd="6dp"
					android:id="@+id/arrGithubLinkTv"/>

				<ImageView
					android:src="@drawable/ic_arrow_right"
					android:tint="@color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/arrGithubLinkIcon"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:background="#FFE45900"
				android:layout_weight="1.0">

				<ImageView
					android:tint="@color/white"
					android:src="@drawable/ic_gitlab"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="GitLab"
					android:textColor="@color/white"
					android:layout_marginLeft="4dp"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:layout_marginStart="4dp"
				android:background="@color/colorPrimary"
				android:padding="4dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Link"
					android:textColor="@color/white"
					android:layout_marginStart="6dp"
					android:layout_marginEnd="6dp"
					android:id="@+id/arrGitlabLinkTv"/>

				<ImageView
					android:src="@drawable/ic_arrow_right"
					android:tint="@color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/arrGitlabLinkIcon"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:background="#FF006D9C"
				android:layout_weight="1.0">

				<ImageView
					android:tint="@color/white"
					android:src="@drawable/ic_bitbucket"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="BitBucket"
					android:textColor="@color/white"
					android:layout_marginLeft="4dp"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:layout_marginStart="4dp"
				android:background="@color/colorPrimary"
				android:padding="4dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Link"
					android:textColor="@color/white"
					android:layout_marginStart="6dp"
					android:layout_marginEnd="6dp"
					android:id="@+id/arrBitbucketLinkTv"/>

				<ImageView
					android:src="@drawable/ic_arrow_right"
					android:tint="@color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/arrBitbucketLinkIcon"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:gravity="center"
			android:background="@color/grey"
			android:paddingBottom="8dp"
			android:paddingTop="8dp">

			<ImageView
				android:src="@drawable/ic_folder"
                android:tint="@color/white"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Browse Repository"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="4dp"/>

			<ImageView
				android:src="@drawable/ic_arrow_right"
                android:tint="@color/white"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

